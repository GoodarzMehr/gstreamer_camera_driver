<launch>
  
  <!-- Launching GSCam package -->
  <arg name="cam_name" value="camera_fl" />

  <!-- Start the GSCAM node -->
  <env name="GSCAM_CONFIG" value="tcpclientsrc host=10.0.0.20 port=7001 ! decodebin ! ffmpegcolorspace" />
  <node pkg="gscam_driver" type="gscam" name="$(arg cam_name)">
    <param name="camera_name" value="$(arg cam_name)" />
    <param name="frame_id" value="right_optical" />
    <param name="camera_info_url" value="/opt/carma/vehicle/calibration/LI_IMX390/LI_IMX390_200.yaml" />
    <remap from="camera/image_raw" to="/hardware_interface/camera/image_raw" />
  </node>
  
</launch>